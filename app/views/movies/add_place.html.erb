<h3> Add an existing place </h3>
<%= form_for @movie, :url => update_add_place_movie_path, :method => "post" do |f| -%>
  <div class="field">
    <%= f.label :name, "Movie: " -%>
    <%= @movie.name -%>
  </div>

  <%= fields_for @filming do |filming_form| -%>
    <div class="field">
      <%= filming_form.label :place_id -%><br />
      <%= filming_form.select :place_id, options_for_select(list_places_for_select, 1) -%>
    </div>
  <%- end -%>

  <div class="actions">
    <%= f.submit %> or <%= link_to "Back", movie_path(@movie) -%>
  </div>
<%- end -%>

