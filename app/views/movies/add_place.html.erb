    <div class="field">
      <%= place_form.label :name, "Place: " -%><br />
      <%= place_form.text_field :name -%>
    </div>

    <div class="field">
      <%= place_form.label :city_id -%><br />
      <%= place_form.select :city_id, options_for_select(list_cities_for_select, 1) -%>
    </div>
  <%- end -%>

  <div class="actions">
    <%= f.submit %> or <%= link_to "Back", movie_path(@movie) -%>
  </div>
<%- end -%>
