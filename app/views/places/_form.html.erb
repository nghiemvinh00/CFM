<%= form_for(@place) do |f| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
        <% @place.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%- if @place.new_record? -%>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
  <%- else -%>
    <div class="field">
      <%= f.label :name, "Place: " %>
      <%= @place.name %>
    </div>
  <%- end -%>

  <%- if @place.new_record? -%>
    <div class="field">
      <%= f.label :city_id %><br />
      <%= f.select :city_id, options_for_select(list_cities_for_select, 1) %>
    </div>
  <%- end -%>

  <div class="field">
    <%= fields_for @filming do |filming_form| -%>
      <%= filming_form.label :movie_id -%><br />
      <%= filming_form.select :movie_id, options_for_select(list_movies_for_select, 1) -%>
    <%- end -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
